@page
@model FociWebApp.Pages.BajnoksagAllasaModel
@{
	ViewData["Title"] = "BAjnokság Állása";
}
<h1>Bajnokság állása</h1>
<table class="table">
    <thead>
        <tr>
            <th>Helyezés</th>
            <th>Csapat Neve</th>
            <th>Játszott mérkőzés</th>
            <th>Győzelem</th>
            <th>Döntetlen</th>
            <th>Vereség</th>
            <th>Pontszám</th>
            <th>Lőtt gól</th>
            <th>Kapott gól</th>

        </tr>
    </thead>
    <tbody >
        @for(int i = 0; i<Model.csapatEredmenyei.Count(); i++)
        {
            <tr>
                <td>@(i+1)</td>
                <td>@Model.csapatEredmenyei[i].CsapatNev</td>
                <td></td>
                <td>@Model.csapatEredmenyei[i].JatszottMeccsekSzama</td>
                <td></td>
                <td>@Model.csapatEredmenyei[i].GyozelmekSzama</td>
                <td></td>
                <td>@Model.csapatEredmenyei[i].DontetlenekSzama</td>
                <td></td>
                <td>@Model.csapatEredmenyei[i].VeresegekSzama</td>
                <td></td>
                <td>@Model.csapatEredmenyei[i].LottGolokSzama</td>
                <td></td>
                <td>@Model.csapatEredmenyei[i].KapottGolokSzama</td>
            </tr>
        }
    </tbody>
    
</table>
